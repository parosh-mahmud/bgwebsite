{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/proposalForm/steps/ProjectFeatures.jsx",
    "src/components/proposalForm/steps/ProjectFeatures.jsx",
    "src/components/proposalForm/steps/ProjectRequirement.jsx",
    "src/components/proposalForm/steps/ProjectRequirement.jsx",
    "src/components/proposalForm/steps/CompanyInfo.jsx",
    "src/components/proposalForm/Stepper.jsx",
    "src/contexts/StepperContext.js",
    "src/components/proposalForm/StepperControl.jsx",
    "src/assets/Icons.jscc"
  ],
  "exclude": ["node_modules"]
}
